// Firebase App (the core Firebase SDK) is always required and must be listed first
import { initializeApp } from 'firebase/app';
import { getAuth } from 'firebase/auth';
import AsyncStorage from '@react-native-async-storage/async-storage';
import { getFirestore } from 'firebase/firestore';
import { getFunctions } from 'firebase/functions';

import {
  FIREBASE_API_KEY,
  FIREBASE_AUTH_DOMAIN,
  FIREBASE_PROJECT_ID,
  FIREBASE_STORAGE_BUCKET,
  FIREBASE_MESSAGING_SENDER_ID,
  FIREBASE_APP_ID,
} from '@env';

// Firebase configuration
const firebaseConfig = {
  apiKey: FIREBASE_API_KEY,
  authDomain: FIREBASE_AUTH_DOMAIN,
  projectId: FIREBASE_PROJECT_ID,
  storageBucket: FIREBASE_STORAGE_BUCKET,
  messagingSenderId: FIREBASE_MESSAGING_SENDER_ID,
  appId: FIREBASE_APP_ID,
};

// Initialize Firebase app
const app = initializeApp(firebaseConfig);

// Firebase Auth instance
export const auth = getAuth(app);

// Manual persistence setup
try {
  // Firebase Auth設定の改善
  import('firebase/auth/react-native').then(({ initializeAuth, getReactNativePersistence }) => {
    // React Native用のpersistenceで再初期化を試みる
    try {
      // すでに初期化されているauthを使わないようにする
      const newAuth = initializeAuth(app, {
        persistence: getReactNativePersistence(AsyncStorage)
      });
      console.log('🔐 Firebase Auth: Enhanced with React Native persistence');
    } catch (error) {
      console.warn('Firebase Auth persistence setup failed:', error);
    }
  }).catch(err => {
    console.warn('Failed to import react-native auth module:', err);
  });
} catch (error) {
  console.warn('Firebase auth/react-native import failed:', error);
}

// Initialize Firestore and Functions
export const db = getFirestore(app);
export const functions = getFunctions(app);

// handy debug
console.log('🔑 Firebase Config →', firebaseConfig);

// Debug auth state changes
auth.onAuthStateChanged((user) => {
  if (user) {
    console.log('🔐 Firebase Auth: User signed in', {
      uid: user.uid,
      email: user.email,
      isAnonymous: user.isAnonymous,
      emailVerified: user.emailVerified
    });
  } else {
    console.log('🔐 Firebase Auth: User signed out');
  }
});
